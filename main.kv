LayoutAdd:

<LayoutAdd>:

    id: addweight

    BoxLayout:
        orientation: 'vertical'
        size: root.size

        Label:
            id: label1
            size_hint_y: 0.8
            font_size: 68
            text: str(round(addweight.weight))+' g'

        BoxLayout:
            size_hint_y: 0.2

            orientation: 'horizontal'
            size: self.size

            Button:
                text: "風袋"
                size_hint_x: 1
                on_press:addweight.ButtonTare()
            Button:
                id: buttonExit
                text: "閉じる"
                size_hint_x: 1
                on_press: addweight.ButtonExit()
