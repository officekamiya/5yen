LayoutAdd:

<LayoutAdd>:

    id: addweight

    BoxLayout:
        orientation: 'vertical'
        size: root.size

        Label:
            id: label1
            size_hint_y: 0.85
            font_size: 120
#            text: str(round(addweight.weight))+' g'
            text: '{:,.0f}'.format(addweight.weight) + ' g'
        BoxLayout:
            size_hint_y: 0.15

            orientation: 'horizontal'
            size: self.size

            Button:
                text: "風袋"
                size_hint_x: 1
                font_size: 30
                on_press:addweight.ButtonTare()
            Button:
                id: buttonExit
                text: "閉じる"
                size_hint_x: 1
                font_size: 30
                on_press: addweight.ButtonExit()
